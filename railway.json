{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "conda env create -f environment.yml && conda activate myenv"
    },
    "deploy": {
        "startCommand": "conda activate myenv && gunicorn main:app",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}
